/* 我的页面样式 */
.profile-container {
  background-color: #F3F3F3;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 头像昵称按钮 */
.avatar-nickname-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  flex-shrink: 0;
}

.avatar-nickname-btn::after {
  border: none;
}

.user-avatar {
  flex-shrink: 0;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 昵称区域 */
.nickname-section {
  width: 100%;
}

/* 昵称显示区域 */
.nickname-display {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.edit-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.edit-btn:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.edit-icon {
  font-size: 24rpx;
}

/* TDesign Dialog 内容样式 */
.nickname-dialog-content {
  padding: 24rpx 0;
}

.nickname-input {
  margin-bottom: 16rpx;
  width: 100%;
}

.input-tips {
  text-align: right;
  margin-top: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.user-stats {
  font-size: 28rpx;
  color: #666;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 24rpx;
}

.default-avatar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666;
}

.login-btn {
  width: 200rpx;
}

/* 个人画廊区域 */
.gallery-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
}

.gallery-scroll {
  height: 60vh;
  box-sizing: border-box;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.gallery-item {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.gallery-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.12);
}

.image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.gallery-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

/* 提示词区域 */
.prompt-section {
  padding: 12rpx 16rpx 8rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.prompt-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

/* 加载更多和没有更多数据 */
.load-more, .no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx;
  color: #666;
}

.load-text {
  font-size: 28rpx;
}

/* 添加新作品按钮 */
.add-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  aspect-ratio: 1;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.2s ease;
}

.add-item:active {
  background: #f0f0f0;
  border-color: #ccc;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #0052D9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.add-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.add-label {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-gallery {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.create-btn {
  width: 200rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin-bottom: 20rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx;
  color: #666;
}

.loading-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .gallery-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .image-container {
    height: 400rpx;
  }
  
  .prompt-section {
    padding: 16rpx 20rpx 12rpx;
  }
  
  .prompt-text {
    font-size: 26rpx;
  }
}
