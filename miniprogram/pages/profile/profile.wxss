/* 我的页面样式 */
.profile-container {
  background-color: #F3F3F3;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 头像昵称按钮 */
.avatar-nickname-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  flex-shrink: 0;
}

.avatar-nickname-btn::after {
  border: none;
}

.user-avatar {
  flex-shrink: 0;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 昵称区域 */
.nickname-section {
  width: 100%;
}

/* 昵称显示区域 */
.nickname-display {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.edit-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.edit-btn:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.edit-icon {
  font-size: 24rpx;
}

/* 自定义弹框样式 */
.nickname-dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.nickname-dialog {
  background: white;
  border-radius: 16rpx;
  width: 600rpx;
  max-width: 90%;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  animation: dialogShow 0.3s ease-out;
}

@keyframes dialogShow {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 弹框头部 */
.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 0 32rpx;
  border-bottom: 1rpx solid #E7E7E7;
  padding-bottom: 24rpx;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.dialog-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.dialog-close:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.close-icon {
  font-size: 32rpx;
  color: #666;
  line-height: 1;
}

/* 弹框内容 */
.dialog-content {
  padding: 32rpx;
}

.dialog-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  text-align: center;
}

.nickname-input-dialog {
  margin-bottom: 16rpx;
  width: 100%;
}

.input-tips {
  text-align: right;
  margin-top: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* 弹框底部 */
.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 32rpx 32rpx;
  justify-content: flex-end;
}

.dialog-btn {
  flex: 1;
  max-width: 200rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.user-stats {
  font-size: 28rpx;
  color: #666;
}

/* 登录区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 24rpx;
}

.default-avatar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.login-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.login-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.login-subtitle {
  font-size: 28rpx;
  color: #666;
}

.login-btn {
  width: 200rpx;
}

/* 个人画廊区域 */
.gallery-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.gallery-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.gallery-image {
  width: 100%;
  height: 100%;
}

.gallery-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx;
}

.gallery-title {
  color: white;
  font-size: 24rpx;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 添加新作品按钮 */
.add-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  aspect-ratio: 1;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.2s ease;
}

.add-item:active {
  background: #f0f0f0;
  border-color: #ccc;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #0052D9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.add-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.add-label {
  font-size: 24rpx;
  color: #666;
}

/* 空状态 */
.empty-gallery {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.create-btn {
  width: 200rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin-bottom: 20rpx;
}

/* 加载状态 */
.loading-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx;
  color: #666;
}

.loading-text {
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .gallery-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
}
