/* 首页样式 */
.home-container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #F3F3F3;
  height: 100vh;
  box-sizing: border-box;
}

/* 图片网格 */
.artwork-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.artwork-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
  display: flex;
  flex-direction: column;
}

.artwork-item:active {
  transform: scale(0.98);
}

/* 图片容器 */
.image-container {
  position: relative;
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

.artwork-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

/* 提示词区域 */
.prompt-section {
  padding: 12rpx 16rpx 8rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.prompt-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: white;
  border-radius: 0 0 12rpx 12rpx;
  min-height: 60rpx;
  box-sizing: border-box;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
}

.user-avatar {
  width: 40rpx !important;
  height: 40rpx !important;
  border-radius: 50%;
  overflow: hidden;
}

/* 确保t-avatar组件的占位图也受到尺寸限制 */
.user-avatar {
  display: block;
  overflow: hidden;
}

.user-nickname {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
  max-width: calc(100% - 56rpx); /* 减去头像宽度和间距 */
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx 0;
  color: #666;
}

.load-text {
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 200rpx;
}

/* 悬浮创建按钮 */
.floating-create-btn {
  position: fixed !important;
  bottom: 120rpx !important;
  right: 40rpx !important;
  z-index: 100 !important;
  width: 112rpx !important;
  height: 112rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3) !important;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .artwork-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .image-container {
    height: 400rpx;
  }
  
  .prompt-section {
    padding: 16rpx 20rpx 12rpx;
  }
  
  .prompt-text {
    font-size: 26rpx;
  }
  
  .user-info {
    padding: 16rpx 20rpx;
    min-height: 70rpx;
    gap: 18rpx;
  }
  
  .avatar-container {
    width: 44rpx;
    height: 44rpx;
  }
  
  .user-avatar {
    width: 44rpx !important;
    height: 44rpx !important;
  }
  
  /* 小屏幕下的头像样式 */
  .user-avatar {
    display: block;
    overflow: hidden;
  }
  
  .user-nickname {
    font-size: 28rpx;
    max-width: calc(100% - 62rpx); /* 减去头像宽度和间距 */
  }
}
