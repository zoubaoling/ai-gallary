/* 首页样式 */
.home-container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #F3F3F3;
  height: 100vh;
  box-sizing: border-box;
}

/* 图片网格 */
.artwork-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.artwork-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
  display: flex;
  flex-direction: column;
  height: 400rpx; /* 固定卡片高度 */
}

.artwork-item:active {
  transform: scale(0.98);
}

/* 图片容器 */
.image-container {
  position: relative;
  width: 100%;
  flex: 1; /* 占据剩余空间 */
  overflow: hidden;
}

.artwork-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

/* 提示词区域 */
.prompt-section {
  padding: 12rpx 16rpx 8rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.prompt-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: white;
  border-radius: 0 0 12rpx 12rpx;
  height: 80rpx; /* 固定用户信息高度 */
  box-sizing: border-box;
  flex-shrink: 0; /* 防止被压缩 */
}

/* 头像容器 - 确保加载成功和失败时大小一致 */
.avatar-container {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar {
  width: 48rpx !important;
  height: 48rpx !important;
  border-radius: 50%;
  overflow: hidden;
}

/* 自定义头像图片样式 */
.custom-avatar {
  width: 48rpx !important;
  height: 48rpx !important;
  border-radius: 50%;
  overflow: hidden;
}

.user-nickname {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
  line-height: 1.2;
  max-width: calc(100% - 68rpx); /* 减去头像宽度和间距 */
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx 0;
  color: #666;
}

.load-text {
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 200rpx;
}

/* 悬浮创建按钮 */
.floating-create-btn {
  position: fixed !important;
  bottom: 120rpx !important;
  right: 40rpx !important;
  z-index: 100 !important;
  width: 112rpx !important;
  height: 112rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3) !important;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .artwork-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .prompt-section {
    padding: 16rpx 20rpx 12rpx;
  }
  
  .prompt-text {
    font-size: 26rpx;
  }
  
  .user-info {
    padding: 12rpx 16rpx;
    height: 80rpx; /* 保持固定高度 */
    gap: 12rpx;
  }
  
  .avatar-container {
    width: 48rpx;
    height: 48rpx;
  }
  
  .user-avatar {
    width: 48rpx !important;
    height: 48rpx !important;
  }
  
  .user-nickname {
    font-size: 24rpx;
    max-width: calc(100% - 68rpx); /* 减去头像宽度和间距 */
  }
}