/* 首页样式 */
.home-container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background-color: #F3F3F3;
  min-height: 100vh;
}

/* 图片网格 */
.artwork-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.artwork-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.artwork-item:active {
  transform: scale(0.98);
}

.artwork-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.artwork-info {
  padding: 20rpx;
}

.artwork-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.artwork-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.author-avatar {
  flex-shrink: 0;
}

.author-name {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.create-time {
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 40rpx 0;
  color: #666;
}

.load-text {
  font-size: 28rpx;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 200rpx;
}

/* 悬浮创建按钮 */
.floating-create-btn {
  position: fixed !important;
  bottom: 120rpx !important;
  right: 40rpx !important;
  z-index: 100 !important;
  width: 112rpx !important;
  height: 112rpx !important;
  box-shadow: 0 8rpx 24rpx rgba(0, 82, 217, 0.3) !important;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .artwork-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .artwork-image {
    height: 400rpx;
  }
}
