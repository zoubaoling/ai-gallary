/* 创建图片页面样式 */
.create-container {
  padding: 40rpx;
  background-color: #F3F3F3;
  min-height: 100vh;
}

/* 通用区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #E7E7E7;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.prompt-input:focus {
  border-color: #0052D9;
}

/* 风格标签 */
.style-tags {
  margin-bottom: 32rpx;
}

.tags-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tag {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

/* 不想要的内容输入 */
.negative-input {
  margin-bottom: 0;
}

.input-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.negative-prompt-input {
  width: 100%;
  border: 2rpx solid #E7E7E7;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.negative-prompt-input:focus {
  border-color: #0052D9;
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  height: 88rpx;
  margin-bottom: 32rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}


/* 结果区域 */
.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.image-container {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  color: #666;
}

.loading-text {
  font-size: 28rpx;
}

.generated-image {
  width: 100%;
  height: 100%;
}

/* 发布按钮 */
.publish-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 灵感提示区域 */
.inspiration-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.inspiration-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.inspiration-item {
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #0052D9;
  transition: all 0.2s ease;
}

.inspiration-item:active {
  background: #F0F2F5;
  transform: scale(0.98);
}

.inspiration-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .create-container {
    padding: 24rpx;
  }
  
  .input-section,
  .result-section,
  .inspiration-section {
    padding: 24rpx;
  }
  
  .tags-container {
    gap: 12rpx;
  }
  
  .style-tag {
    font-size: 22rpx;
    padding: 10rpx 20rpx;
  }
}
